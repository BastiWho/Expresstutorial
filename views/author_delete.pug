extends layout

block content
  h1 #{title}: #{author.name}
  p= author.lifespan

  if author_books.length

    p #[strong Löschen Sie die folgenden Bücher, bevor Sie versuchen, diesen Author zu löschen.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Bücher

      dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Wollen Sie diesen Author wirklich löschen?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=author._id )

      button.btn.btn-primary(type='submit') Löschen